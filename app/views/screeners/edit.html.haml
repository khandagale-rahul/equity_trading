- content_for :title, "Editing Screener"

.card
  .card-header
    %h1 Editing Trading Screener
  .card-body
    = render "form", screener: @screener

.mt-3
  = link_to @screener, class: "btn btn-info me-2" do
    %i.fas.fa-eye.me-1
    Show Screener
  = link_to screeners_path, class: "btn btn-secondary" do
    %i.fas.fa-arrow-left.me-1
    Back to Screeners
