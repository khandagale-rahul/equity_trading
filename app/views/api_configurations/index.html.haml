%p{style: "color: green"}= notice

- content_for :title, "Api configurations"

.card
  .card-header
    .row
      .col-12
        .d-flex.justify-content-between.align-items-center
          %h1 Api configurations
          = link_to "Add New Configuration", new_api_configuration_path, class: "btn btn-primary"
  .card-body
    - if @api_configurations.empty?
      %p No API configurations found.
    - else
      %div{id: "api_configurations"}
        %table.table.table-striped.table-bordered
          %thead
            %tr
              %th API Name
              %th Created At
              %th Updated At
              %th Actions
          %tbody
            - @api_configurations.each do |api_configuration|
              %tr
                %td= api_configuration.api_name&.humanize
                %td= l(api_configuration.created_at, format: :short)
                %td= l(api_configuration.updated_at, format: :short)
                %td
                  = link_to "Show", api_configuration, class: "btn btn-sm btn-info"
                  = link_to "Edit", edit_api_configuration_path(api_configuration), class: "btn btn-sm btn-warning"
                  = link_to "Destroy", api_configuration, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"
